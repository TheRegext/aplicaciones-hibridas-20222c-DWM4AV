<%- include('../Layout/Header',{ title: "Agregar producto"}) %>

    <h1>Nuevo Producto</h1>
    <form action="/productos/nuevo" method="post" enctype="application/x-www-form-urlencoded">
        <label for="nombre">
            Nombre:
            <input type="text" name="name" id="nombre">
        </label>
        <label for="precio">
            Precio:
            <input type="number" name="price" id="precio">
        </label>

        <label for="category" >
            Categoria: 
            <select name="category" id="category">
                <% for(let i=0; i<categorias.length; i++){ %>
                    <option value="<%= categorias[i].name %>"><%= categorias[i].name %></option>
                <% } %>
            </select>
        </label>

        <button type="submit">Guardar</button>
    </form>

<%- include('../Layout/Footer') %>